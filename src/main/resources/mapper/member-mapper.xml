<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="Member">
	<select id="getAllData" resultType="MemberDTO">
		select * from members where id=#{id}
	</select>
	
	<insert id="insert" parameterType="MemberDTO">
		insert into members values(#{id},#{pw},#{name},#{phone1},#{phone2},#{phone3},#{email},#{zipcode},#{address1},#{address2},default,sysdate)
	</insert>
	
	<select id="login" resultType="int">
		select count(*) from members where id = #{id} and pw = #{pw}
	</select>
	
	<delete id="withdraw" parameterType="String">
		delete from members where id = #{id}
	</delete>
	
	<update id="updateInfo" parameterType="MemberDTO">
		update members set pw=#{pw}, name=#{name}, phone1=#{phone1}, phone2=#{phone2}, phone3=#{phone3}, email=#{email}, zipcode=#{zipcode}, address1=#{address1}, address2=#{address2} where id=#{id}
	</update>
</mapper>

	