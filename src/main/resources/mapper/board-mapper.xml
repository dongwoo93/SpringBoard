<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="Board">
	<insert id="insert" parameterType="BoardDTO">
		insert into board values(board_seq.nextval,#{title},#{contents},#{writer},sysdate,0,#{ip})
	</insert>
	<select id="BoardList" resultType="BoardDTO">
		select * from (select board.*, row_number() over(order by writedate desc) as num from board) where num between #{startNum} and #{endNum}
	</select>
</mapper>