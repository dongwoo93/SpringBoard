<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Board">
	<select id="getAllData" resultType="BoardDTO">
		select * from (select board.*, row_number() over(order by writedate desc) as num from board) where num between #{startNum} and #{endNum}
	</select>
	
	<insert id="insert" parameterType="BoardDTO">
		insert into board values(board_seq.nextval,#{title},#{contents},#{writer},sysdate,0,'abc')
	</insert>
	
	<select id="getPageNavi" resultType="String">
		select count(*) totalCount from board
	</select>
	
	<select id="boardView" resultType="BoardDTO">
		select * from board where seq='${value}'
	</select>
	
	<update id="update" parameterType="BoardDTO">
		update board set title=#{title}, contents=#{contents} where seq=#{seq}
	</update>
	
	<delete id="delete" parameterType="BoardDTO">
		delete from board where seq='${value}'
	</delete>
</mapper>